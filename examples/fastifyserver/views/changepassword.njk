<html>
    <head>
        <title>Change Your Password</title>
        <link rel="stylesheet" href="/public/style.css"/>
    </head>
    <body>
        <h1>Change Your Password</h1>
        {% if message %}
            <p class="success">{{ message }}</p>
        {% else %}
            {% if error %}
                <p>
                {% if code == "PasswordFormat" %}
                    Password must be at leat 8 characters, contain at least one lowercase letter, one
                    uppercase letter and one digit.
                {% elif code == "PasswordMatch" %}
                    Passwords do not PasswordMatch
                {% else %}
                    {{ error }}
                {% endif %}
            {% endif %}
            <form method="POST" action="/changepassword">
                <input type="hidden" name="next" value="{{ next }}"/>
                <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
                {% if error %}
                    <p class="error">{{ error }}</p>
                {% endif %}
                <p>
                    <label for="oldPassword">Old Password</label><br>
                    <input type="password" name="oldPassword" size="20" />
                </p>
                <p>
                    <label for="newPassword">New Password</label><br>
                    <input type="password" name="newPassword" size="20" />
                </p>
                <p>
                    <label for="repeatPassword">Repeat Password</label><br>
                    <input type="password" name="repeatPassword" size="20" />
                </p>
                <button type="submit">Change Password</button>
            </form>
        {% endif %}
    </body>
</html>