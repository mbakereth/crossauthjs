<html>
    <head>
        <title>Password Flow Login: Email</title>
        <link rel="stylesheet" href="/public/style.css"/>
    </head>
    <body>
        <h1>Password Flow Login: Email</h1>
        <form method="POST" action="/passwordoob">
            <input type="hidden" name="mfa_token" value="{{ mfa_token }}"/>
            <input type="hidden" name="oob_code" value="{{ oob_code }}"/>
            <input type="hidden" name="scope" value="{{ scope }}"/>
            {% if errorMessage %}
                <p class="error">
                    {{ errorMessage }}
                </p>
            {% endif %}
            <p>
                Please take a look at your email and enter the code we
                sent you.
            <p>
                <label for="binding_code">Code</label><br>
                <input type="password" name="binding_code" size="20"/>
            </p>
            <p><button type="submit">Log In</button></p>

        </form>
    </body>
</html>
