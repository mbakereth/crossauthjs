<html>
    <head>
        <title>Reset Your Password</title>
        <link rel="stylesheet" href="/public/style.css"/>
    </head>
    <body>
        <h1>Reset Your Password</h1>
        {% if required %}
            <p>You are required to reset your password</p>
        {% endif %}
        {% if message %}
            <p class="success">{{ message }}</p>
        {% else %}
            {% if errorMessage %}
                <p class="error">
                {% if errorCode == "InvalidEmail" %}
                    Please enter a valid email address.
                {% else %}
                    {{ errorMessage }}
                {% endif %}
                </p>
            {% endif %}
            <form method="POST" action="requestpasswordreset">
                <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
                <input type="hidden" name="required" value="{{ required }}"/>
                <input type="hidden" name="next" value="{{ next }}"/>
                <p><label for="email">Please enter your email address</label></p>
                <p>
                    <input type="email" name="email" size="20" />
                </p>
                <button type="submit">Send Password Reset Link</button>
            </form>
        {% endif %}
    </body>
</html>