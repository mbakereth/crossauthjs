<html>
    <head>
        <title>Home Page</title>
        <link rel="stylesheet" href="/public/style.css"/>
        </head>
    <body>
        <h1>Welcome {{ user.username or "nobody" }}</h1>

        {% if user.username %}
            <form method="POST" action="logout">
                <button type="submit">Logout</button>
            </form>
        {% else %}
            <p><button onClick="document.location='/login';">Login</button></p>
            <p><a href="signup">Sign up</a></p>
        {% endif %}

        <p><a href="protected">User page</a></p>

    {% if user.admin %}
        <p><a href="/admin/">Admin page</a></p>
    {% endif %}

    </body>
</html>
